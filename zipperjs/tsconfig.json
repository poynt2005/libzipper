{
    "compilerOptions": {
      "target": "es2015",          // 目標編譯版本
      "module": "esnext",        // 使用 CommonJS 模塊系統
      "strict": true,              // 啟用所有嚴格類型檢查
      "esModuleInterop": true,     // 啟用 esModuleInterop，方便與 CommonJS 模塊互操作
      "forceConsistentCasingInFileNames": true,  // 在文件名稱的大小寫上強制一致性
      "moduleResolution": "node",  // 使用 Node 模塊解析策略
      "resolveJsonModule": true,   // 允許 TypeScript 解析 .json 文件作為模塊
      "declaration": false,         // 生成 .d.ts 声明文件
      "outDir": "./dist",          // 輸出目錄
      "rootDir": "./lib/js",          // 源代碼目錄
      "removeComments": true,      // 移除註釋
      "types": ["node"]
    },
    "include": [
      "lib/js/**/*.ts"               // 包括這些文件進行編譯
    ],
    "exclude": [
      "node_modules"               // 排除這個目錄
    ]
  }